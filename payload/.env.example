# MongoDB connection string
# For local development: mongodb://localhost:27017/moze-finance
# For production: Your MongoDB Atlas connection string
MONGODB_URI=mongodb://localhost:27017/moze-finance

# Payload CMS secret key (change this to a secure random string in production)
PAYLOAD_SECRET=your-secret-key-here

# Admin user credentials (used for initial setup)
PAYLOAD_ADMIN_EMAIL=admin@example.com
PAYLOAD_ADMIN_PASSWORD=changeme

# Environment
NODE_ENV=development

# Frontend URL for CORS (development only)
FRONTEND_URL=http://localhost:5173

# Server configuration
PORT=3001

# Public server URL (used by Payload for absolute URLs)
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3001
